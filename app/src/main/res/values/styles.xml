<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TimeTextView">
        <item name="android:textColor">@color/color_dark_blue</item>
    </style>

    <style name="TimeTextView.Dark" parent="TimeTextView">
        <item name="android:textColor">@color/color_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeTextView.Light" parent="TimeTextView">
        <item name="android:textColor">@color/color_light_blue</item>
    </style>

    <style name="PlayerButton.Play" parent="@android:style/MediaButton.Play">
        <item name="android:src">@drawable/ic_play_arrow_white_36dp</item>
    </style>

    <style name="PlayerButton.Ffwd" parent="@android:style/MediaButton.Ffwd">
        <item name="android:src">@drawable/ic_fast_forward_white_36dp</item>
    </style>

    <style name="PlayerButton.Rew" parent="@android:style/MediaButton.Rew">
        <item name="android:src">@drawable/ic_fast_rewind_white_36dp</item>
    </style>
    <style name="PlayerButton.Previous" parent="@android:style/MediaButton.Previous">
        <item name="android:src">@drawable/ic_skip_previous_white_36dp</item>
    </style>
    <style name="PlayerButton.Next" parent="@android:style/MediaButton.Next">
        <item name="android:src">@drawable/ic_skip_next_white_36dp</item>
    </style>

</resources>
